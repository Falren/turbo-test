<%= turbo_frame_tag quote do %>
<li class="p-4">
  <div class="bg-white p-4 rounded-md shadow-md">
    <div class="flex justify-between items-center mb-2">
      <h2 class="text-lg font-bold quote__name"><%= link_to quote.name, quote_path(quote), data: {turbo_frame: "_top"}, class: "text-gray-600 hover:text-gray-300" %></h2>
      <div class="quote__actions space-x-2">
        <%= link_to "Edit", edit_quote_path(quote), class: "bg-gray-500 hover:bg-gray-600 text-gray-100 py-2 px-4 rounded-md font-medium transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-purple-600 focus:ring-offset-2" %>
        <%= button_to "Delete", quote_path(quote), method: :delete, class: "bg-gradient-to-b from-green-500 to-gray-500 hover:from-gray-500 hover:to-green-500 text-white py-2 px-4 rounded-md font-medium transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-purple-600 focus:ring-offset-2", form: {data: {turbo_frame: "_top"}} %>
      </div>
    </div>
  </div>
</li>
<% end %>
