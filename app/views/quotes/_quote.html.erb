<%= turbo_frame_tag quote do %>
  <div class="p-4 border rounded-md my-4">
    <div class="flex justify-between items-center mb-2">
      <h2 class="text-lg font-bold"><%= link_to quote.name, quote_path(quote), data: {turbo_frame: "_top"} %></h2>
      <div class="quote__actions space-x-2">
        <%= link_to "Edit", edit_quote_path(quote), class: "btn btn--light" %>
        <%= button_to "Delete", quote_path(quote), method: :delete, class: "btn btn--light", form: {data: {turbo_frame: "_top"}} %>
      </div>
    </div>
  </div>
<% end %>
