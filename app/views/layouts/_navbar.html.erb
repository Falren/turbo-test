<header class="bg-white shadow-lg sticky top-0 z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16">
      <div class="flex">
        <div class="flex-shrink-0 flex items-center">
          <% if user_signed_in? %>
            <span class="text-lg font-bold text-gray-900"><%= current_company.name %></span>
          <% end %>
        </div>
      </div>
      <div class="flex items-center">
        <% if user_signed_in? %>
        <div class="ml-4">
          <div class="flex items-center">
            <span class="text-sm font-medium text-gray-900 mr-2"><%= current_user.name %></span>
            <%= button_to "Sign out",
                        destroy_user_session_path,
                        method: :delete,
                        class: "bg-gray-600 text-white py-3 px-6 rounded-md shadow-lg font-medium transition-all duration-300 hover:bg-gray-400 focus:outline-none focus:ring-2 focus:ring-purple-600 focus:ring-offset-2" %>
          </div>
        </div>
        <% else %>
        <a href="<%= new_user_session_path %>"
          class="bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline hover:text-white">
          Sign in
        </a>
        <% end %>
      </div>
    </div>
  </div>
</header>
