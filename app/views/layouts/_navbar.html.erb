<header class="bg-white shadow-lg">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16">
      <div class="flex">
        <div class="flex-shrink-0 flex items-center">
          <% if user_signed_in? %>
            <span class="text-lg font-bold text-gray-900"><%= current_company.name %></span>
          <% end %>
        </div>
      </div>
      <div class="flex items-center">
        <% if user_signed_in? %>
        <div class="ml-4">
          <div class="flex items-center">
            <span class="text-sm font-medium text-gray-900 mr-2"><%= current_user.name %></span>
            <%= button_to "Sign out",
                        destroy_user_session_path,
                        method: :delete,
                        class: "px-4 py-2 border border-transparent text-base font-medium rounded-md text-white bg-blue-500 hover:bg-blue-700" %>
          </div>
        </div>
        <% else %>
        <a href="<%= new_user_session_path %>"
          class="inline-flex items-center px-4 py-2 border border-transparent text-base font-medium rounded-md text-white bg-blue-500 hover:bg-blue-700">
          Sign in
        </a>
        <% end %>
      </div>
    </div>
  </div>
</header>
