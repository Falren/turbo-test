<main class="bg-gradient-to-b from-green-400 to-gray-700 min-h-screen flex flex-col justify-center items-center text-white">
  <h1 class="text-6xl font-bold mb-4">Quote Editor</h1>
  <p class="text-xl mb-8">A blazing fast quote editor built with Hotwire</p>

  <% if user_signed_in? %>
    <%= link_to "View quotes", quotes_path, class: "bg-white text-gray-800 py-3 px-6 rounded-md shadow-lg font-medium transition-all duration-300 hover:bg-gray-200 hover:text-gray-600 focus:outline-none focus:ring-2 focus:ring-purple-600 focus:ring-offset-2" %>
  <% else %>
    <%= link_to "Sign in", new_user_session_path, class: "bg-white text-gray-800 py-3 px-6 rounded-md shadow-lg font-medium transition-all duration-300 hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-purple-600 focus:ring-offset-2" %>
  <% end %>
</main>
